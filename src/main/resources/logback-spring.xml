<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="ERROR_SLACK" class="com.github.maricn.logback.SlackAppender">
        <webhookUri>${ERROR_LOG_URL}</webhookUri>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %n [ERROR] %msg %n</pattern>
        </layout>
        <username>킹에러</username>
        <iconEmoji>:exclamation:</iconEmoji>
        <colorCoding>true</colorCoding>
    </appender>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%green(%d{yyyy-MM-dd HH:mm:ss.SSS}) %magenta([%F]) %highlight(%5level) %cyan(%logger) - %yellow(%msg%n)</Pattern>
        </encoder>
    </appender>

    <appender name="ASYNC_SLACK" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR_SLACK"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <root level="INFO">
        <appender-ref ref="Console"/>
        <appender-ref ref="ASYNC_SLACK"/>
    </root>
</configuration>